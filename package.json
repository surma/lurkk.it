{
  "name": "readylateylater",
  "version": "1.0.0",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.51",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.51",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.1",
    "lit-html": "^0.10.0",
    "prettier": "^1.13.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^4.0.0-beta.5",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.15.1",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2",
    "westend": "git+ssh://github.com/PolymerLabs/westend#master"
  },
  "scripts": {
    "build:fsm": "node node_modules/westend/utils/fsm-generator.js -c -- src/fsm/spec.yaml",
    "copy-static": "rsync -r static/* dist",
    "build": "npm run build:fsm && rollup -c && npm run copy-static",
    "serve": "http-server dist -c0",
    "fmt": "prettier --write src/**/*.ts *.{js,json,md}",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "fmt_test": "test $(prettier -l src/**/*.ts *.{js,json,md} | wc -l) -eq 0",
    "test": "npm run build && npm run fmt_test && npm run lint"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-proposal-object-rest-spread",
      "westend/utils/tasks-transform"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "author": "Surma",
  "license": "BSD-3-Clause"
}

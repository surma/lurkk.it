{
  "name": "readylateylater",
  "version": "1.0.0",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "husky": "^1.0.0-rc.13",
    "prettier": "^1.14.2",
    "tslint": "^5.11.0"
  },
  "scripts": {
    "build:fsm": "node node_modules/westend/utils/fsm-generator.js -c -- src/fsm/spec.yaml",
    "copy-static": "cpx 'static/**' dist",
    "gzip": "gzip -k9nr dist",
    "build": "npm run build:fsm && rollup -c && npm run copy-static && npm run gzip",
    "serve": "http-server dist -c0 -g",
    "deploy": "npm run build && firebase deploy",
    "fmt": "prettier --write 'src/**/*.{ts,tsx}' *.{js,json,md} && npm run lintfix",
    "lint": "tslint -t verbose -c tslint.json 'src/**/*.{ts,tsx}'",
    "lintfix": "tslint -t verbose -c tslint.json --fix 'src/**/*.{ts,tsx}'",
    "fmt_test": "test $(prettier -l 'src/**/*.{ts,tsx}' *.{js,json,md} | wc -l) -eq 0",
    "test": "npm run fmt_test && npm run lint && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "author": "Surma",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@mattiasbuelens/web-streams-polyfill": "^0.1.0",
    "clean-css": "^4.2.1",
    "cpx": "^1.5.0",
    "html-minifier": "^3.5.19",
    "http-server": "^0.11.1",
    "idb-keyval": "^3.1.0",
    "magic-string": "^0.25.0",
    "preact": "^8.3.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^4.0.0-beta.8",
    "rollup-plugin-loadz0r": "^0.3.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "typescript": "^3.0.1",
    "westend": "git+ssh://git@github.com/PolymerLabs/westend.git#master"
  }
}
